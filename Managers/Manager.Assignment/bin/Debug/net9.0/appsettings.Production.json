{
  "ConnectionStrings": {
    "MongoDB": "${MONGODB_CONNECTION_STRING:mongodb://localhost:27017}"
  },
  "MassTransit": {
    "Provider": "${MASSTRANSIT_PROVIDER:RabbitMQ}"
  },
  "RabbitMQ": {
    "Host": "${RABBITMQ_HOST:localhost}",
    "Port": "${RABBITMQ_PORT:5672}",
    "Username": "${RABBITMQ_USERNAME:guest}",
    "Password": "${RABBITMQ_PASSWORD:guest}"
  },
  "Kafka": {
    "BootstrapServers": "${KAFKA_BOOTSTRAP_SERVERS:localhost:9092}"
  },
  "OpenTelemetry": {
    "Endpoint": "${OTEL_EXPORTER_OTLP_ENDPOINT:http://localhost:4317}",
    "HealthEndpoint": "${OTEL_HEALTH_ENDPOINT:http://localhost:8081}"
  },
  "ManagerUrls": {
    "Step": "${STEP_MANAGER_URL:http://localhost:5000}",
    "OrchestratedFlow": "${ORCHESTRATED_FLOW_MANAGER_URL:http://localhost:5140}"
  }
}
